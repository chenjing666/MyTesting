<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/live_screeen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/live_screeen" />

    <ImageView
        android:id="@+id/live_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/live_camera" />

    <ImageView
        android:id="@+id/vedio_short"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/vedio_short" />

    <ImageView
        android:id="@+id/live_unputvideo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/live_camera"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/live_unputvedio" />
</RelativeLayout>
